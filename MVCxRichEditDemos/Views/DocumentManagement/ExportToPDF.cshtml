@{ DemoHelper.Instance.ControlAreaMaxWidth = Unit.Percentage(100); }

@section StartDemoRegion {
    @{ Html.BeginForm(new { Controller = "DocumentManagement", Action = "ExportFile" }); }
}
@Html.Partial("ExportToPDFPartial")
@section DemoOptionsTop {
    <div class="options">
        <div class="options-item">
            @Html.DevExpress().Button(s => {
                s.Name = "Export";
                s.Text = "Export to PDF";
                s.Images.Image.IconID = "export_exporttopdf_16x16";
                s.Theme = DemoHelper.Instance.Theme;
                s.UseSubmitBehavior = true;
            }).GetHtml()
        </div>
    </div>
}
@section EndDemoRegion {
    @{ Html.EndForm(); }
}