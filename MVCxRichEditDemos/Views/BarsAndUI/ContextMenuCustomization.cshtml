@model ContextMenuCustomizationDemoOptions
@{DemoHelper.Instance.ControlAreaMaxWidth = Unit.Percentage(100);}

@section AdditionalResources {
    <script type="text/javascript" src="@Url.Content("~/Scripts/ContextMenuCustomization.js")"></script>
}

@section StartDemoRegion {
    @{ Html.BeginForm(); }
}
@Html.Partial("ContextMenuCustomizationPartial", Model)
@section DemoOptionsTop {
    <div class="options">
        <div class="options-item">
            @Html.DevExpress().CheckBox(s => {
               s.Name = "chbShowContextMenu";
               s.Properties.Caption = "Show Context Menu";
               s.Checked = Model.ShowContextMenu;
               s.Theme = DemoHelper.Instance.Theme;
           }).GetHtml()
        </div>
        <div class="options-item">
            @Html.DevExpress().CheckBox(s => {
               s.Name = "chbShowDefaultItems";
               s.Properties.Caption = "Show Default Items";
               s.Checked = Model.ShowDefaultItems;
               s.Theme = DemoHelper.Instance.Theme;
           }).GetHtml()
        </div>
    </div>
}
@section EndDemoRegion { 
    @{ Html.EndForm(); }
}